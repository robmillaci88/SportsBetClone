<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="5dp"
        android:background="@drawable/bg_group_item_normal_state"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground" android:id="@+id/container">

    <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp" app:srcCompat="@drawable/expand_recyclerview_arrow"
            android:id="@+id/parent_down_expansion" android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"/>
    <TextView
            android:id="@+id/group_textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start|center_vertical" android:layout_marginLeft="50dp" android:textStyle="bold"/>

</FrameLayout>