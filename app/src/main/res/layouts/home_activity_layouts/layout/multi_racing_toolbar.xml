<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/multi_racing_app_bar"
        android:background="@color/colorPrimaryDark"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                           android:layout_height="wrap_content"
                                                           android:minHeight="?attr/actionBarSize"
                                                           app:layout_scrollFlags="scroll|exitUntilCollapsed"
                                                           app:layout_collapseMode="pin">
            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbarMultiRacing"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:minHeight="?attr/actionBarSize"
                    android:background="@android:color/transparent"
                    app:layout_collapseMode="pin"
                    app:titleTextAppearance="@style/Toolbar.TitleText"
                    app:titleMarginStart="40dp"
                    android:elevation="0dp"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_search_white_24dp"
                    app:layout_constraintEnd_toStartOf="@+id/login_join"
                    android:layout_marginEnd="4dp"
                    app:layout_constraintTop_toTopOf="@+id/login_join"
                    app:layout_constraintBottom_toBottomOf="@+id/login_join" android:id="@+id/search_icon"/>
            <TextView
                    android:text="Login/Join"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp" android:id="@+id/login_join"
                    android:textColor="@android:color/white"
                    android:layout_marginRight="@dimen/bet_slip_image_offset_width"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                    android:text="@string/same_race_multi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bowlbyone_regular"
                    app:layout_constraintBottom_toBottomOf="@+id/search_icon"
                    android:id="@+id/same_race_multi_title" android:textColor="@android:color/white"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    android:textStyle="bold" android:textAllCaps="true"
                    app:layout_constraintTop_toTopOf="@+id/search_icon"
                    android:layout_marginStart="24dp"
                    app:layout_constraintStart_toStartOf="@+id/toolbarMultiRacing" android:textSize="20sp"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/search_icon"
            />

        </androidx.constraintlayout.widget.ConstraintLayout>


    <include
            layout="@layout/tab_layout_racing_mult"
            android:layout_width="match_parent" android:layout_height="@dimen/betting_tab_layout_height"
            android:layout_marginTop="8dp"
            android:minHeight="?attr/actionBarSize" app:layout_constraintTop_toBottomOf="@+id/event_date_time"/>


</com.google.android.material.appbar.AppBarLayout>