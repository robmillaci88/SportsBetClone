<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:tag="child" android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@android:color/white"
        android:clickable="true">

    <TextView
            android:id="@+id/child_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@android:color/black"
            android:gravity="center|start" tools:text="Draymond to win" android:layout_marginLeft="20dp"/>
    <LinearLayout android:layout_width="@dimen/single_bet_button_width" android:layout_height="@dimen/single_bet_button_height"
                  style="@style/my_button_style" android:layout_gravity="right|center" android:id="@+id/bet_button"
                  android:orientation="vertical"
                  android:layout_marginRight="20dp" android:layout_marginEnd="20dp"
                  android:background="@drawable/bet_btn_unpressed">
        <TextView
                android:text="1.65"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:layout_height="match_parent" android:layout_width="match_parent" android:gravity="center"
                android:textColor="@android:color/black" android:id="@+id/odds_tv">
        </TextView>
        <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/black"
        />

    </LinearLayout>
    <View
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginStart="20dp"/>

</FrameLayout>