<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:id="@+id/bet_slip_layout">

    <ImageView
            android:layout_width="@dimen/betslip_image_width"
            android:layout_height="62dp"
            app:layout_collapseMode="pin"
            android:background="@drawable/betslip_icon"
            android:adjustViewBounds="true"
            android:id="@+id/bet_slip"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" android:layout_marginEnd="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_collapseMode="pin"
            android:textColor="@android:color/black"
            android:id="@+id/bet_slip_amount"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/bet_slip"
            app:layout_constraintStart_toStartOf="@+id/bet_slip"
            app:layout_constraintEnd_toEndOf="@+id/bet_slip"/>

</androidx.constraintlayout.widget.ConstraintLayout>